{
    "name": "hominio-box-monorepo",
    "private": true,
    "type": "module",
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "dev:wallet": "cd packages/wallet && bun run dev",
        "dev:website": "cd packages/website && bun run dev",
        "dev": "concurrently \"cd packages/wallet && bun run dev\" \"cd packages/website && bun run dev\"",
        "build:wallet": "cd packages/wallet && bun run build",
        "lint": "eslint . --ext .js,.ts,.svelte",
        "format": "prettier --write ./**/*.{js,ts,svelte,json,md}"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.9",
        "@eslint/js": "^9.26.0",
        "concurrently": "^9.1.2",
        "eslint": "^9.26.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-svelte": "^3.6.0",
        "globals": "^16.1.0",
        "prettier": "^3.5.3",
        "prettier-plugin-svelte": "^3.4.0",
        "prettier-plugin-tailwindcss": "^0.6.11",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.32.1"
    }
}